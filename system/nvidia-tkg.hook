[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target=nvidia-tkg
Target=nvidia-dkms-tkg
Target=nvidia-dev-tkg
Target=nvidia-dev-dkms-tkg

[Action]
Description=Update Nvidia modules in initcpio
When=PostTransaction
NeedsTargets
Exec=/bin/sh -c '[[ -f /usr/bin/mkinitcpio ]] && mkinitcpio -P || echo -e "\e[31m mkinitcpio not found, please update initramfs manually\e[0m"'
